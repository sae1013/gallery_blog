<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/95cdf720ac.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        .homelink:hover {
            text-decoration: none;
        }

        button {
            background-color: transparent;
            border: 0px transparent solid;
        }

        .container_custom {
            width: 80%;
            margin: auto;
        }

        /* .card-title {
            width: 100%;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
        } */

        .card-text {
            width: 100%;
            height: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
            /* white-space: nowrap; */

        }
    </style>
</head>

<body>
    <%- include("nav") %>
    <div class="container_custom">
        <h3 class="mt-3 pb-3 mb-4 font-italic border-bottom">나의 게시글%></h3>
        <div class="row">
            <% for(var i = 0; i < results.length; i++){ %>
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src=<%=results[i]._doc.image %> alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title border-bottom pb-3"><%=results[i]._doc.title%>

                            <form action="/delete" class="float-right mt-5" method="post">
                                <input type="hidden" name="post_id" value=<%=results[i]._doc._id %>>
                                </input>
                                <button type="submit"><i class="fas fa-trash-alt text-danger"></i></a></button>
                            </form>

                            <form action="/modify" class="float-right mt-5" method="post">
                                <input type="hidden" name="post_id" value=<%=results[i]._doc._id %>>
                                </input>
                                <button type="submit"><i class="fas fa-edit text-info"></i></a></button>
                            </form>

                        </h5>
                        <p class="card-text"><%= results[i]._doc.description%></p>
                        <% var readmore_url = "/post/"+results[i]._doc._id %>
                        <a href=<%= readmore_url %> class="float-right"> Read more <i
                                class="fas fa-angle-double-right"></i></a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <div class="container">

</body>

</html>